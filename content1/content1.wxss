/* content1/content1.wxss */
.container{
  display: flex;
}
.menu_wrapper{
  flex: 0 0 80px;
  width: 80px;
  background: #fff;
}
.menu_wrapper .text{
  font-size: 14px;
  height: 54px;
  line-height: 30px; 
  display: table;
  text-align: center;
  border-bottom:1rpx solid rgba(0,0,0,0.2);
  width: 92%;
  margin: 0 auto;
}
.text_cont{
    display: table-cell;
    font-size: 12px;
    width: 56px;
    text-align: center;
    vertical-align: middle;
    position: relative;
}
.foods_wrapper{
  flex: 1;
}
.name{
  height: 26px;
  line-height: 26px;
  font-size: 12px;
  padding-left: 16px;
  color: #93999f;
  background: #f3f5f7;
  border-left: 2px solid #d9dde1;
}
.nameCurrent{
  height: 26px;
  line-height: 26px;
  font-size: 12px;
  padding-left: 16px;
  background:#e7e7e7;
  color:#f00;
  border-left: 2px solid #d9dde1;
}
.foods_container{
  display: flex;
}
.foods_left{
  flex: 0 0 57px;
  margin:6px 10px 6px 10px;

}
.foods_right{
  flex: 1;
}
.foods_name{
  font-size: 14px;
  height: 14px;
  line-height: 14px;
  color: #07111b;
  margin: 2px 0 4px 0;
}
.des,.count{
  font-size: 10px;
  color: #93999f;
  line-height: 10px;
}
.des{
  margin-bottom: 4px;
  line-height: 12px;
}
.price{
  line-height: 14px;
  font-weight: bold;
}
.newPrice{
  margin-right: 18px;
  font-size: 14px;
  color: #f01414;
}
.oldPrice{
  text-decoration: line-through;
  font-size:10px;
  color: #93999f;
}
.menu_wrapper .current{
  background:#e7e7e7;
  color:#f00;
  font-weight: bold;
  display:table-cell;
  font-size:12px;
  width:56px;
  text-align:center;
  vertical-align:middle;
  position:relative;

}
.addCart{
  display: flex;
  margin-top:20px;
  margin-right:10px;
}
.addCart .text{
  flex: 1;
  font-size: 12px;
  text-align: center;
  line-height: 14px;
}
.addCart .add,.addCart .reduce{
  background:#00a0dc;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  text-align: center;
  line-height: 15px; 
  flex: 1;
}
.hide{
  display: none;
}
.show{
  display: block;
}