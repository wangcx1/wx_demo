/* footer/footer.wxss */
.footer_container{
  width: 100%;
  height: 48px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}
.footer_content{
  display: flex;
  color: rgba(255,255,255,0.4);
  background: #141d27;
  height: 100%;
}
.footer_left{
 width: 100%;
}
.price{
  display: inline-block;
  vertical-align: top;
  font-size: 16px;
  font-weight: bold;
  line-height: 24px;
  border-right: 1px solid rgba(255,255,255,0.4);
  margin-top: 12px;
  padding: 0 12px;
}
.desc{
  display: inline-block;
  vertical-align: top;
  line-height: 24px;
  font-size:12px;
  margin: 12px 0 0 12px;
}
.footer_right{
  width: 105px;
  flex: 0 0 105px;
}
.not-enough{
  background: #2b333b;
}
.pay{
  height: 48px;
  line-height: 48px;
  font-size: 12px;
  font-weight: 700;
  text-align: center;
}
.shopcart_wrapper{
    display: inline-block;
    position: relative;
    top: -10px;
    margin: 0 12px;
    padding: 6px;
    width: 56px;
    height: 56px;
    box-sizing: border-box;
    vertical-align: top;
    border-radius: 50%;
    background: #141d27;
}
.shopcart{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #2b343c;
    text-align: center;
    font-size: 12px;
    display: inline-block;
    line-height: 44px;
}
.count{
  position: absolute;
  top: -5px;
  right: 10px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  padding:1px 3px;
  font-size: 14px
}